{{#modal-box  ok='save' model=model close='closeModal'}}
<h5 class="text-center cust-padd">Please suggest new platform number</h5>
<div class="row">
	<div class="col-xs-12 cust-padd"><h5>{{model.dataPlatForm.station_name}}</h5> </div>
	<div class="col-xs-12 cust-padd">Existing</div>
</div>
<div class="form-group">
 {{input type="hidden" id="form_train_number" name="form[train_number]" value = model.train_number }}{{input type="hidden" id="form_station_code" name="form[station_code]" value = model.dataPlatForm.station_code class="form-control"}}
 <input type="text" value="{{model.dataPlatForm.platform_number}}" class="form-control disabled" disabled />	
</div>
<div class="row">
	<div class="col-xs-12 cust-padd">New</div>
</div>
<div class="input-group">
 <span class="input-group-addon" id="basic-addon1">
 PF#</span>
<select id="form_platform_number" name="form[platform_number]" class="form-control">
{{more-times 25}}
</select>
</div>
{{/modal-box}}